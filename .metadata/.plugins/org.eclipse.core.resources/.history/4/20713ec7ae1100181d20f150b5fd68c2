import static java.lang.System.*;

public class Lab11c
{
   public static void main( String args[] )
   {
	   TriangleThree lab = new TriangleThree();
	   int size = 5;
	   char letter = 'x';
	   for(int i = size; i>=0; i--){
			for(int x = i; x>=0;x--){
				out.print(" ");
			}
			for(int x = i; x>=0; x++){
				out.print(letter);
			}
			out.print("\n");
		}






	}
}